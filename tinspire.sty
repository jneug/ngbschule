\newlength{\tin@menuWidth}
\def\tin@mWidth{}
\def\tin@mHeight{}

\newenvironment{TINdisplay}{\begin{tikzpicture}
	\fill[gray!10,draw=black] (0,0) rectangle (8,6);
}{\end{tikzpicture}}
\newenvironment{TINwindow}[1]{\settowidth{\tin@menuWidth}{  #1  }\begin{tikzpicture}
	\edef\tin@mWidth{\the\tin@menuWidth};
	\edef\tin@mHeight{{\the\tin@menuWidth*.75}};
	\fill[gray!10,draw=black] (0,0) rectangle (\tin@mWidth,\tin@mHeight);
	\node at (0,\tin@mHeight) [anchor=north west,black,fill=black,rectangle,text=white,font=\sffamily,minimum width=\tin@mWidth] {#1\strut};
}{\end{tikzpicture}}
