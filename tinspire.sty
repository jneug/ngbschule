\def\tin@minwidth{6ex}
\tikzset{
	tinbutton/.style={
		rectangle,
		white,
		draw=black,
		fill=black!90,
		rounded corners=1pt,
		text height=1.5ex,
		text depth=.25ex,
		text=white,
		inner sep=3pt,
		minimum width=\tin@minwidth,
		font=\sffamily\bfseries,
	},
	tinkey/.style={
		tinbutton,
		drop shadow={
			fill=black,
			opacity=0.75,
			shadow xshift=0.15ex,
			shadow yshift=-0.15ex,
		},
	},
	tinctrl/.style={
			black,
			draw=tinctrlclr,
			fill=tinctrlclr,
			text=black,
	},
	tinsecondary/.style={
		tinsecondaryclr,
		yshift=-.3ex,
		font=\fontsize{1ex}{0}\selectfont\sffamily\bfseries,
		text depth=0pt
	},
	tinshadow/.style={
		tinbutton,
		black,
		fill=black,
		xshift=1pt,
		yshift=-1pt,
	},
}


